// Mock implementation of network monitor
export const networkMonitor = {
  getStatus: () => ({ online: true, quality: "high" }),
  addListener: (callback: (status: { online: boolean; quality: string }) => void) => {
    // Simulate network status changes
    setInterval(() => {
      callback({ online: Math.random() > 0.5, quality: "high" });
    }, 5000);
  },
};